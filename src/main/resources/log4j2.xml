<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <File name="A1" fileName="D:\\Eclipse\\Application\\Application.log" append="false">
      <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
    </File>
    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Root level="DEBUG">
      <AppenderRef ref = "A1"/>
    </Root>
    
    <Root level="debug">
    	<AppenderRef ref = "A1" />
    </Root>
    
    <Root level="error">
    	<AppenderRef ref = "A1" />
    </Root>
    
    <Root level="INFO">
    	<AppenderRef ref = "A1" />
    </Root>
    
    <Root level="TRACE">
    	<AppenderRef ref = "A1" />
    </Root>
    
    <Root level="trace">
    	<AppenderRef ref = "A1" />
    </Root>
  </Loggers>
</Configuration>